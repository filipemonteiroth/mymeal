<h4>Escolha sua refeição</h4>

<table>
	<thead>
		<tr>
			<th>Nome</th>
			<th>Descrição</th>
			<th>Valor</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @meals.each do |meal| %>
			<tr>
				<td><%= meal.name %></td>
				<td><%= meal.description %></td>
				<td><%= meal.value %></td>
				<td><img src="<%= meal.image.url %>" width="256" height="256"></td>
				<td>
					<form action="/cart/<%= meal.id %>" method="POST">
						<button type="submit">Adicionar ao carrinho</button>
					</form>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>